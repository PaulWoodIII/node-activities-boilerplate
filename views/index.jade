.navbar.navbar-fixed-top
	.navbar-inner
		.container
			a.btn.btn-navbar("data-target"=".nav-collapse", "data-toggle"="collapse")
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.brand(:href = "#") Activity Streams
			.nav-collapse
				ul.nav
					li
						#connected
							strong Online
					- if(session.auth)
						li.logout
							a(href="/logout")
								span Logout
			.span5
				- if(!session.auth)
					ul.nav
						li.dropdown
							a(href="#", "data-toggle"="dropdown")
								span Login
								b.caret
							ul.dropdown-menu
								li.facebook
									a(href="/auth/facebook")
										img(src="//facebook.com/favicon.ico", alt="Facebook")
										span Facebook
								li.twitter
									a(href="/auth/twitter)
										img(src="//twitter.com/favicon.ico", alt="Twitter")
										span Twitter
								li.github
									a(href="/auth/github")
										img(src="//github.com/favicon.ico", alt="GitHub")
										span Github

